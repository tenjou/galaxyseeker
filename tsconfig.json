{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es2015",
        "module": "commonjs",
        "jsx": "react-jsx",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "sourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    }
}
